{
  "name": "tridi-cookies",
  "version": "1.0.0",
  "description": "üç™ Tridi Cookies - Simple cross-browser cookie-consent plugin written in vanilla js.",
  "main": "dist/cookieconsent.umd.js",
  "module": "dist/cookieconsent.esm.js",
  "files": [
    "dist",
    "types"
  ],
  "types": "types/index.d.ts",
  "scripts": {
    "dev": "rollup --config ./rollup-full.config.mjs --watch",
    "build": "pnpm dlx update-browserslist-db@latest && pnpm rollup:full & pnpm rollup:core",
    "rollup:full": "rollup --config ./rollup-full.config.mjs",
    "rollup:core": "rollup --config ./rollup-core.config.mjs",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "test": "jest --env=jsdom --runInBand --coverage --silent ./tests",
    "semantic-release": "semantic-release",
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trigidigital/tridi-cookies"
  },
  "keywords": [
    "cookie",
    "consent",
    "gdpr",
    "banner",
    "vanilla",
    "tridi",
    "tridi-cookies",
    "privacy"
  ],
  "bugs": {
    "url": "https://github.com/trigidigital/tridi-cookies/issues"
  },
  "homepage": "https://github.com/trigidigital/tridi-cookies",
  "author": "Tridi Digital",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.3",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "cssnano": "^7.0.6",
    "eslint": "^9.19.0",
    "fast-glob": "^3.3.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "rollup": "^4.34.2",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.83.4",
    "semantic-release": "^23.1.1",
    "sitemap": "^8.0.0",

    "vitepress": "1.6.3"
  },
  "jest": {
    "transform": {
      "\\.[jt]sx?$": "babel-jest"
    }
  }
}
